<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" /> 
	<import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
	<import resource="classpath:META-INF/cxf/cxf-servlet.xml" /> 

	<bean id="restFul" class="ent.server.restful.EntService"></bean>
	<bean id="restFulFileUpLoad" class="ent.server.restful.UploadFile"></bean>
	<bean id="restFulItem" class="ent.server.restful.Item"></bean>
	<bean id="restFulOrder" class="ent.server.restful.Order"></bean>
	<bean id="restFulSys" class="ent.server.restful.Sys"></bean>
	
	<jaxrs:server id="restContainer" address="/">
		<jaxrs:serviceBeans>
			<ref bean="restFul"/>
			<ref bean="restFulFileUpLoad"/>
			<ref bean="restFulItem"/>
			<ref bean="restFulOrder"/>
			<ref bean="restFulSys"/>
		</jaxrs:serviceBeans>
	</jaxrs:server>
</beans>